{
  "name": "peal",
  "version": "0.1.0",
  "description": "A lightweight sound effect library for web and desktop applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "build:lib": "tsup src/index.ts --format cjs,esm --dts",
    "build:web": "next build",
    "dev": "next dev",
    "dev:lib": "tsup src/index.ts --format cjs,esm --dts --watch",
    "start": "next start",
    "test": "vitest",
    "lint": "next lint",
    "lint:lib": "eslint src --ext .ts",
    "prepublishOnly": "pnpm build:lib"
  },
  "keywords": [
    "sound",
    "audio",
    "effects",
    "ui",
    "web-audio"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@types/jszip": "^3.4.1",
    "howler": "^2.2.4",
    "jszip": "^3.10.1",
    "lucide-react": "^0.523.0",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.4"
  },
  "engines": {
    "node": ">=16"
  }
}
